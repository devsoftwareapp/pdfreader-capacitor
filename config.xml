<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devsoftware.pdfreader"
    version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>PDFReader</name>
    <description>PDF Reader Application</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>


    <!-- UYGULAMA GİRİŞ DOSYASI -->
    <content src="web/index.html" />

    <access origin="*" />

    <!-- Genel ayarlar -->
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreenDelay" value="2000" />
    <preference name="FadeSplashScreenDuration" value="300" />

    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="36" />
    <preference name="android-compileSdkVersion" value="36" />

    <preference name="AndroidPersistentFileLocation" value="Compatibility" />


    <!-- ANDROID PLATFORM AYARLARI -->
    <platform name="android">

        <!-- Klasik depolama izinleri -->
        <config-file target="AndroidManifest.xml" parent="/manifest">
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" android:maxSdkVersion="30" />
        </config-file>

        <!-- Android 13+ yeni medya izinleri -->
        <edit-config file="AndroidManifest.xml" target="/manifest" mode="merge">
            <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" android:maxSdkVersion="33" />
            <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" android:maxSdkVersion="33" />
            <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" android:maxSdkVersion="33" />
        </edit-config>

    </platform>


    <!-- HTTP/HTTPS erişimi -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />


    <!-- PLUGINLER (GitHub ile uyumlu) -->
    <plugin name="cordova-plugin-android-permissions" />
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-file-opener2" />
    <plugin name="cordova-plugin-dialogs" />

</widget>
