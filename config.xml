<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devsoftware.pdfreader" version="1.0.0"
    xmlns="http://www.w3.org/ns/widgets"
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>PDFReader</name>
    <description>PDF Reader Application</description>

    <content src="web/index.html" />

    <!-- ANDROID AYARLARI -->
    <platform name="android">

        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="36" />
        <preference name="android-compileSdkVersion" value="36" />

        <!-- İzinleri doğru şekilde ekle -->
        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/uses-permission">
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
        </edit-config>

        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/uses-permission">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
        </edit-config>

        <edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/uses-permission">
            <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
        </edit-config>

        <preference name="AndroidPersistentFileLocation" value="Compatibility" />

    </platform>

    <!-- Intent izinleri -->
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />

    <!-- Pluginler -->
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-file-transfer" />
    <plugin name="cordova-plugin-android-permissions" />
    <plugin name="cordova-plugin-file-opener2" />
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-splashscreen" />

</widget>
